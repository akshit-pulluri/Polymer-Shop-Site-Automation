<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Polymer Shop Test Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.polymershop.listeners.TestListener" />
    </listeners>
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.polymershop.tests.HomePageTests"/>
            <class name="com.polymershop.tests.ProductListingTests"/> 
            <class name="com.polymershop.tests.ProductDetailsTests"/>
            <class name="com.polymershop.tests.CartTests"/>
            <class name="com.polymershop.tests.CheckoutTests"/>
        </classes>
    </test>
    
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.polymershop.tests.HomePageTests"/>
            <class name="com.polymershop.tests.ProductListingTests"/> 
            <class name="com.polymershop.tests.ProductDetailsTests"/>
            <class name="com.polymershop.tests.CartTests"/>
            <class name="com.polymershop.tests.CheckoutTests"/>
        </classes>
    </test>
</suite>